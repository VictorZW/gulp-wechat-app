.title {
  font-size: 28rpx;
  color: #000000;
  padding: 20rpx 24rpx;
  border-bottom: 2rpx solid #DCE1EB;
}

.icon-area {
  display: flex;
  padding: 24rpx 0;
}

.icon-area .icon-content {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon-area .icon-content .icon-img {
  width: 96rpx;
  height: 96rpx;
  margin-bottom: 14rpx;
}

.icon-area .icon-content .icon-text {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}
